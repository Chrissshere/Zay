<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardBackgroundColor="#1C1C1E"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- User Info Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Username with Verification Checkmark -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/usernameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@username"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/verificationCheckmark"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="2dp"
                        android:src="@drawable/ic_verified_blue"
                        android:scaleType="fitCenter"
                        android:visibility="gone"
                        android:contentDescription="Verified Account" />

                </LinearLayout>

                <TextView
                    android:id="@+id/createdDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Joined Dec 01, 2024"
                    android:textColor="#888888"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/roleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USER"
                android:textColor="#666666"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="@drawable/rounded_background"
                android:padding="6dp" />

        </LinearLayout>

        <!-- Status Badges -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/verifiedBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ“ VERIFIED"
                android:textColor="#4CAF50"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#224CAF50"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:cornerRadius="4dp" />

            <TextView
                android:id="@+id/proBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRO"
                android:textColor="#FF9800"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#22FF9800"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:cornerRadius="4dp" />

            <TextView
                android:id="@+id/bannedBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BANNED"
                android:textColor="#F44336"
                android:textSize="11sp"
                android:textStyle="bold"
                android:background="#22F44336"
                android:padding="6dp"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:cornerRadius="4dp" />

        </LinearLayout>

        <!-- Device Info -->
        <TextView
            android:id="@+id/deviceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="iPhone 15 Pro"
            android:textColor="#666666"
            android:textSize="13sp"
            android:layout_marginBottom="12dp" />

        <!-- Ban Info (if banned) -->
        <TextView
            android:id="@+id/banInfoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Banned: Spam/Inappropriate content"
            android:textColor="#F44336"
            android:textSize="13sp"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/verifyButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Verify"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#4CAF50"
                android:minWidth="80dp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/banButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Ban"
                android:textSize="12sp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FF4444"
                android:minWidth="80dp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Delete"
                android:textSize="12sp"
                android:backgroundTint="#666666"
                android:minWidth="80dp"
                app:cornerRadius="8dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView> 