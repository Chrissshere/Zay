<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <!-- Content Container -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/bottom_nav_background"
        android:padding="8dp"
        android:layout_margin="8dp"
        android:elevation="8dp">

        <!-- Play Tab -->
        <LinearLayout
            android:id="@+id/playTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/playIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_black_24dp"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/playLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share/Main"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Inbox Tab -->
        <LinearLayout
            android:id="@+id/inboxTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/inboxIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_notifications_black_24dp"
                android:tint="#80FFFFFF" />

            <TextView
                android:id="@+id/inboxLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inbox"
                android:textSize="12sp"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Explore Tab -->
        <LinearLayout
            android:id="@+id/exploreTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/exploreIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dashboard_black_24dp"
                android:tint="#80FFFFFF" />

            <TextView
                android:id="@+id/exploreLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:textSize="12sp"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Settings Tab -->
        <LinearLayout
            android:id="@+id/settingsTab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/settingsIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dashboard_black_24dp"
                android:tint="#80FFFFFF" />

            <TextView
                android:id="@+id/settingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="12sp"
                android:textColor="#80FFFFFF"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout> 