<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_background"
    android:paddingTop="60dp"
    android:paddingHorizontal="20dp">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚙️ Settings"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="40dp" />

    <!-- Settings Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- User Info Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#30FFFFFF"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACCOUNT"
                        android:textSize="12sp"
                        android:textColor="#AAFFFFFF"
                        android:layout_marginBottom="12dp" />

                    <!-- Username with Verification Checkmark -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/usernameText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@username"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />

                        <ImageView
                            android:id="@+id/verificationCheckmark"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginStart="2dp"
                            android:src="@drawable/ic_verified_blue"
                            android:visibility="gone"
                            android:scaleType="fitCenter"
                            android:contentDescription="Verified Account" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/roleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="User"
                        android:textSize="14sp"
                        android:textColor="#AAFFFFFF" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Verification Settings Card (only for verified users) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/verificationSettingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#30FFFFFF"
                app:cardElevation="0dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VERIFICATION"
                        android:textSize="12sp"
                        android:textColor="#AAFFFFFF"
                        android:layout_marginBottom="12dp" />

                    <!-- Show Verification in Explore Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Show verification checkmark in explore"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Control whether your verification badge appears in explore feed"
                                android:textSize="12sp"
                                android:textColor="#AAFFFFFF" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/showVerificationToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Pro Features Section (Admin Only) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/proFeaturesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#30FFFFFF"
                app:cardElevation="0dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRO FEATURES"
                        android:textSize="12sp"
                        android:textColor="#AAFFFFFF"
                        android:layout_marginBottom="12dp" />

                    <!-- Pro Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pro Account"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Access sender info and advanced features"
                                android:textSize="12sp"
                                android:textColor="#AAFFFFFF" />

                        </LinearLayout>

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/proToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Admin Panel Card (only for admins) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/adminPanelCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#AA3F51B5"
                app:cardElevation="0dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADMIN FEATURES"
                        android:textSize="12sp"
                        android:textColor="#AAFFFFFF"
                        android:layout_marginBottom="12dp" />

                    <!-- Admin Panel Button -->
                    <LinearLayout
                        android:id="@+id/adminPanelButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Admin Panel"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage users, analytics, and settings"
                                android:textSize="12sp"
                                android:textColor="#AAFFFFFF" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="›"
                            android:textSize="24sp"
                            android:textColor="#AAFFFFFF" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Actions Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="#30FFFFFF"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ACTIONS"
                        android:textSize="12sp"
                        android:textColor="#AAFFFFFF"
                        android:layout_marginBottom="12dp" />

                    <!-- Request Verification Button (for non-verified users) -->
                    <Button
                        android:id="@+id/requestVerificationButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Request Verification Checkmark"
                        android:textColor="@android:color/white"
                        android:background="@drawable/verification_request_button_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone" />

                    <!-- Subscription management moved to Admin Panel -->

                    <!-- Contact Support Button -->
                    <Button
                        android:id="@+id/contactSupportButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📞 Contact Support"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:background="@drawable/contact_support_button_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp" />

                    <!-- My Support Tickets Button -->
                    <Button
                        android:id="@+id/mySupportTicketsButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎫 My Support Tickets"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:background="@drawable/my_tickets_button_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Manage Trusted Devices Button -->
                    <Button
                        android:id="@+id/manageDevicesButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📱 Manage Trusted Devices"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:background="@drawable/my_tickets_button_background"
                        android:padding="16dp"
                        android:layout_marginBottom="12dp" />

                    <Button
                        android:id="@+id/logoutButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textColor="@android:color/white"
                        android:background="@drawable/logout_button_background"
                        android:padding="16dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</LinearLayout> 